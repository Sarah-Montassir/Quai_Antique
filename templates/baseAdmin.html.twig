<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <link rel="stylesheet" href="https://bootswatch.com/5/sandstone/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand ms-4" href="#">
            <img src="{{ asset('images/logo.png') }}" width="30" height="30" alt="Logo">
        </a>
        <a class="navbar-brand ms-4" href="{{path('home')}}">Quai Antique</a>
        <button class="navbar-toggler me-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link active me-2" href="{{path('home')}}">Accueil
                        <span class="visually-hidden">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link me-2" href="{{path('carte')}}">
                        La Carte
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link me-2" href="{{path('reservation')}}">Réserver</a>
                </li>
                {%  if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link me-2" href="{{path('login')}}">Se connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link me-2" href="{{path('logout')}}">Se déconnecter</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<!-- Sidebar -->
<div>
    <div class="adminLayout">
        <div class="sidebar">
            <div class="logo-details">
                <i class='bx bx-menu' id="btn" ></i>
            </div>
            <ul class="nav-list">
                <li>
                    <a href="{{ path('app_admin') }}">
                        <i class='bx bx-grid-alt'></i>
                        <span class="links_name">Accueil panel</span>
                    </a>
                    <span class="tooltip">Accueil panel</span>
                </li>
                <li>
                    <a href="{{ path('app_get_admin_schedule') }}">
                        <i class='bx bx-user' ></i>
                        <span class="links_name">Horaires d'ouverture</span>
                    </a>
                    <span class="tooltip">Horaires d'ouverture</span>
                </li>
                <li>
                    <a href="{{ path('app_get_admin_pictures') }}">
                        <i class='bx bx-chat' ></i>
                        <span class="links_name">Caroussel</span>
                    </a>
                    <span class="tooltip">Caroussel</span>
                </li>
                <li>
                    <a href="{{ path('app_get_admin_meal') }}">
                        <i class='bx bx-pie-chart-alt-2' ></i>
                        <span class="links_name">Plats</span>
                    </a>
                    <span class="tooltip">Plats</span>
                </li>
                <li>
                    <a href="{{ path('app_admin_category_meal') }}">
                        <i class='bx bx-folder'></i>
                        <span class="links_name">Catégorie de plat</span>
                    </a>
                    <span class="tooltip">Catégorie de plat</span>
                </li>
                <li>
                    <a href="#">
                        <i class='bx bx-cart-alt' ></i>
                        <span class="links_name">Order</span>
                    </a>
                    <span class="tooltip">Order</span>
                </li>
                <li>
                    <a href="#">
                        <i class='bx bx-heart' ></i>
                        <span class="links_name">Saved</span>
                    </a>
                    <span class="tooltip">Saved</span>
                </li>
                <li>
                    <a href="#">
                        <i class='bx bx-cog' ></i>
                        <span class="links_name">Setting</span>
                    </a>
                    <span class="tooltip">Setting</span>
                </li>
                <li>
                    <a href="{{ path('home') }}">
                        <i class='bx bx-log-out' id="log_out" ></i>
                        <span class="links_name">Page d'accueil</span>
                    </a>
                </li>
            </ul>
        </div>
        <section class="home-section">

            {% block body %}{% endblock %}
        </section>
    </div>
<!-- Footer -->
    {% block footer %}
        {{ render(controller('App\\Controller\\FooterController::getFooter')) }}
    {% endblock %}

</div>
<script src="{{ asset('js/script.js') }}"></script>


</body>
</html>
